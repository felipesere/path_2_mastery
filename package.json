{
  "name": "path_2_mastery",
  "version": "0.0.1",
  "description": "A collection of learning modules",
  "homepage": "https://github.com/felipesere/path_2_mastery",
  "main": "app.js",
  "scripts": {
    "dev": "webpack-dev-server --mode development --content-base dist",
    "api": "json-server --port 3030 --watch lessons.json",
    "lint": "eslint src test",
    "prettier": "prettier --write *.js",
    "test": "ava"
  },
  "author": "Felipe Sere, Christoph Gockel",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/felipesere/path_2_mastery.git"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "ava": {
    "require": [
      "esm",
      "@babel/register"
    ],
    "babel": {
      "testOptions": {
        "presets": [
          "@babel/preset-react",
          [
            "module:ava/stage-4",
            {
              "modules": false
            }
          ]
        ]
      }
    }
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/cli": "^7.2.3",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "ava": "^1.0.0-beta",
    "babel-loader": "^8.0.5",
    "css-loader": "^2.1.0",
    "eslint": "^5.12.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.8.2",
    "json-server": "^0.14.2",
    "prettier": "^1.13.4",
    "webpack": "^4.0.0",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14"
  },
  "dependencies": {
    "esm": "^3.0.51",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-markdown": "^4.0.6",
    "react-placeholder": "^3.0.1",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-sortable-hoc": "^1.3.1",
    "semantic-ui-react": "^0.84.0",
    "string-hash": "^1.1.3"
  }
}
